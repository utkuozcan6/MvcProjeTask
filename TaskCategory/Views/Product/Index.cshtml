@model IEnumerable<TaskCategory.Entity.Entities.Product>

<br />
<a>ÜRÜN BİLGİSİ</a>
<br />
<br />
<div class="row">
    <div class="col-md-3">
        @if (Model.Count() > 0)
        {
            <table class="table table-stripped border">
                <tr class="table-secondary">
                    <th>Kategori Adı</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Index" asp-controller="ProductDetail"
                               asp-route-id="@item.Id">@item.Name</a>
                        </td>
                    </tr>
                }
            </table>

        }
        else
        {
            <p>Listelenecek veri bulunamadı...</p>
        }
    </div>
</div>
