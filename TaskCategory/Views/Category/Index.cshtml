@model IEnumerable<TaskCategory.Entity.Entities.Product>


    <br />
    <br />

<div class="border p-4 bg-white">
    <div class="row">
        <div class="text-info"> Ürün Listesi</div>
    </div>
</div>

<br />

<div>
    @if (Model.Count() > 0)
        {
            <table class="table table-stripped border">
                <tr class="table-secondary">
                    <th>Ürün Adı</th>
                </tr>

                @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                               <a class="btn btn-primary text-white" asp-action="GoCategory4Product"
                                  asp-route-Id="@item.Id">@item.Name</a>
                            </td>
                        </tr>
                    }
            </table>

        }
        else
        {
            <p>Listelenecek veri bulunamadı...</p>
        }

</div>

